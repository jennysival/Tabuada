<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Resultado">

    <TextView
        android:id="@+id/tv_titulo_tabuada"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/texto_tabuada_de"
        android:textSize="@dimen/tamanho_fonte_16"
        android:textStyle="bold"
        android:layout_marginTop="@dimen/margem_50"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
        android:id="@+id/tv_resultado_tabuada"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/texto_exemplo_tabuada"
        android:textSize="@dimen/tamanho_fonte_14"
        android:textAlignment="textStart"
        android:gravity="start"
        android:layout_marginTop="@dimen/margem_50"
        app:layout_constraintTop_toBottomOf="@id/tv_titulo_tabuada"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <Button
        android:id="@+id/botao_calcular"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/texto_botao_recalcular_tabuada"
        android:textAllCaps="true"
        android:layout_marginTop="@dimen/margem_50"
        android:layout_marginHorizontal="@dimen/margem_16"
        android:backgroundTint="@color/azul_lilas_6893ec"
        app:layout_constraintTop_toBottomOf="@id/tv_resultado_tabuada"/>

</androidx.constraintlayout.widget.ConstraintLayout>